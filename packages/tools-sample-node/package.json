{
  "name": "@ktam/tools-sample-node",
  "version": "0.1.1",
  "private": true,
  "description": "A test Node project to make sure the lint / prettier configs work as expected",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingston/ktam-tools"
  },
  "license": "MIT",
  "author": "Kingston Tam",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "start": "node dist/index.js",
    "test": "vitest"
  },
  "devDependencies": {
    "@ktam/lint-node": "workspace:*",
    "@tsconfig/node20": "20.1.4",
    "@types/node": "20.17.10",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.1.8"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "volta": {
    "node": "20.18.0"
  }
}
