{
  "name": "@ktam/tools-sample-node",
  "version": "0.3.0",
  "private": true,
  "description": "A test Node project to make sure the lint / prettier configs work as expected",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingston/ktam-tools"
  },
  "license": "MIT",
  "author": "Kingston Tam",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "start": "node dist/index.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ktam/lint-node": "workspace:*",
    "@tsconfig/node20": "20.1.6",
    "@types/node": "24.5.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  }
}
