{
  "name": "@ktam/lint-node",
  "version": "0.4.0",
  "description": "ESLint and Prettier configs for ESM Node.JS projects",
  "keywords": [
    "eslint",
    "prettier",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingston/ktam-tools"
  },
  "license": "MIT",
  "author": "Kingston Tam",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./eslint-configs/typescript": "./eslint-configs/typescript.js",
    "./eslint-configs/prettier": "./eslint-configs/prettier.js",
    "./eslint": "./eslint.config.node.js",
    "./prettier": "./prettier.config.node.js"
  },
  "files": [
    "eslint-configs/*.js",
    "prettier.config.node.js",
    "eslint.config.node.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w ."
  },
  "dependencies": {
    "@eslint/js": "9.23.0",
    "@vitest/eslint-plugin": "1.1.38",
    "eslint-config-prettier": "10.1.1",
    "eslint-import-resolver-typescript": "4.2.5",
    "eslint-plugin-import-x": "4.9.3",
    "eslint-plugin-perfectionist": "4.10.1",
    "eslint-plugin-unicorn": "58.0.0",
    "globals": "^16.0.0",
    "prettier-plugin-packagejson": "2.5.10",
    "typescript-eslint": "8.28.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "20.1.5",
    "@types/eslint-config-prettier": "6.11.3",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "volta": {
    "node": "20.18.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
